@model BookingForm.Models.Sale
@{
    ViewBag.Title = "Login";
}
<h2>Đăng nhập</h2>

    <div class="col-md-4">
        <form method="post" asp-action="Home">
            <div class="form-group">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="pass" class="control-label"></label>
                <input asp-for="pass" class="form-control" />
                <span asp-validation-for="pass" class="text-danger"></span>
            </div>
            <input style="float:right;" class="btn btn-primary" type="submit" value="Login" />
        </form>
    </div>