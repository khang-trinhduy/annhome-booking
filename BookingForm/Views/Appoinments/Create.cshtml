@model BookingForm.Models.Appoinment

@{
    ViewData["Title"] = "Create";
}


<div>
    <h2 style="float:left">Thỏa thuận đăng ký giữ chỗ</h2>
    <label style="text-align:right;color:orangered;width: 1000px;height: 5px;" class="control-label">(*)Bắt buộc</label>
</div>
<hr />
<div class="row">
    <div class="col-md-12 col-xs-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-4 col-xs-4">

                <div class="form-group">
                    <label asp-for="Customer" class="control-label"></label>
                    <input asp-for="Customer" class="form-control" value="Nguyễn Văn Minh"/>
                    <span asp-validation-for="Customer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    @Html.RadioButton("Gender", "Nam", true, new { style = "margin-left: 25px;" })Nam
                    @Html.RadioButton("Gender", "Nữ", new { style = "margin-left: 25px;" })Nữ
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" value="tp Hồ Chí Minh" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" value="0909898787"/>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" value="tuanvan@mail.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Job" class="control-label"></label>
                    <input asp-for="Job" class="form-control" value="Nhân Viên" />
                    <span asp-validation-for="Job" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WorkPlace" class="control-label"></label>
                    <input asp-for="WorkPlace" class="form-control" value="TP Hồ Chí Minh" />
                    <span asp-validation-for="WorkPlace" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HKTT" class="control-label"></label>
                    <input asp-for="HKTT" class="form-control" value="Hồ Chí Minh" />
                    <span asp-validation-for="HKTT" class="text-danger"></span>
                </div>

            </div>
            <div class="col-md-4 col-xs-4">
                <div class="form-group">
                    <label asp-for="Cmnd" class="control-label"></label>
                    <input asp-for="Cmnd" class="form-control" value="250877659" />
                    <span asp-validation-for="Cmnd" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Day" class="control-label"></label>
                    <input asp-for="Day" class="form-control" value="03/02/2017" />
                    <span asp-validation-for="Day" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Place" class="control-label"></label>
                    <input asp-for="Place" class="form-control" value="HCM" />
                    <span asp-validation-for="Place" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="text-align:left;width: 119px;" class="control-label">Sản phẩm</label>
                    <label class="control-label">Số lượng</label>
                    <ul style="padding-left: 20px;">
                        <li>
                            <label class="control-label" style="width: 100px;">Căn 1PN:</label>
                            <input onchange="calculate()" id="c1" value="0" asp-for="NCH1" min="0" style="text-align:right;padding-left: 0px;width: 100px;" />
                        </li>
                        <li>
                            <label class="control-label" style="width: 100px;">Căn 2PN:</label>
                            <input onchange="calculate()" id="c2" value="0" asp-for="NCH2" min="0" style="text-align:right;padding-left: 0px;width: 100px;" />
                        </li>
                        <li>
                            <label class="control-label" style="width: 100px;">Căn 3PN:</label>
                            <input onchange="calculate()" id="c3" value="0" asp-for="NCH3" min="0" style="text-align:right;padding-left: 0px;width: 100px;" />
                        </li>
                        <li>
                            <label class="control-label" style="width: 100px;">Nhà phố:</label>
                            <input onchange="calculate()" id="sh" value="0" asp-for="NMS" min="0" style="text-align:right;padding-left: 0px;width: 100px;" />
                        </li>
                        <li>
                            <label class="control-label" style="width: 100px;">Biệt thự:</label>
                            <input onchange="calculate()" id="ms" value="0" asp-for="NSH" min="0" style="text-align:right;padding-left: 0px;width: 100px;" />
                        </li>
                        <li>
                            <label class="control-label" style="width: 100px;">Shophouse:</label>
                            <input onchange="calculate()" id="shh" value="0" asp-for="NSHH" min="0" style="text-align:right;padding-left: 0px;width: 100px;" />
                        </li>
                    </ul>
                </div>
                <div class="form-group">
                    <label asp-for="Money" class="control-label"></label>
                    <input id="Money" asp-for="Money" class="form-control money" value="0" />
                    <span asp-validation-for="Money" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4 col-xs-4">
                <div class="form-group">
                    <label asp-for="Purpose" class="control-label"></label>
                    <select asp-for="Purpose" class="dropdown">
                        <option value="Để ở"> Để ở</option>
                        <option value="Để cho thuê"> Để cho thuê</option>
                        <option value="Để đầu tư"> Để đầu tư</option>
                    </select>
                    <span asp-validation-for="Purpose" class="text-danger"></span>
                </div>
                <label asp-for="DType" class="control-label"></label>
                <div class="form-group">
                    @Html.RadioButton("DType", "Tiền mặt", true)Tiền mặt
                    @Html.RadioButton("DType", "Chuyển khoản", new { style = "margin-left: 25px;" })Chuyển khoản
                    @Html.RadioButton("DType", "Cả hai", new { style = "margin-left: 25px;" })Cả hai
                    <span asp-validation-for="DType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cash" class="control-label"></label>
                    <input value="0" asp-for="Cash" class="form-control" />
                    <span asp-validation-for="Cash" class="text-danger"></span>
                </div>
                <hr />
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input value="0" asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Requires" class="control-label"></label>
                    <input asp-for="Requires" class="form-control" />
                    <span asp-validation-for="Requires" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Details" class="control-label"></label>
                    <input asp-for="Details" class="form-control" />
                    <span asp-validation-for="Details" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="sale" class="control-label"></label>
                    <input asp-for="sale" class="form-control" value="@TempData["email"]" />
                    <span asp-validation-for="sale" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="password" class="control-label"></label>
                    <input asp-for="password" class="form-control" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Xác nhận" class="btn btn-success" />
                </div>

            </div>
        </form>
    </div>
</div>
<script>
    function calculate()
    {
        document.getElementById("Money").value = document.getElementById("c1").value * 30000000 +
            document.getElementById("c2").value * 30000000 +
            document.getElementById("c3").value * 30000000 +
            document.getElementById("sh").value * 50000000 +
            document.getElementById("shh").value * 100000000 +
            document.getElementById("ms").value * 100000000;
    }
</script>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
